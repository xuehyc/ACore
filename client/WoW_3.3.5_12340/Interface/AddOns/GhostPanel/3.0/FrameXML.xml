<!--StatPoints-->
<Frame name="GhostStatPointsFrame" parent="UIParent" inherits="GhostStaticFrameTemplate3.0">
	<Anchors><Anchor point="CENTER"><Offset x="0" y="0" /></Anchor></Anchors>
	<Size><AbsDimension x="300" y="380"/></Size>
	<Frames>
		<Frame name="$parentMainTextFrame" inherits="GhostStatPointsTextTemplate">
			<Anchors>
				<Anchor point="TOP">
					<Offset x="0" y="-180" />
				</Anchor>
			</Anchors>
		</Frame>
		<Button name="$parentCancelButton">
			<Size x="20" y="20"/>
			<Anchors>
				<Anchor point="TOPRIGHT">
					<Offset x="-5" y="-5" />
				</Anchor>
			</Anchors>
			<Scripts>
				<OnLoad>self:SetNormalTexture("Interface\\RAIDFRAME\\ReadyCheck-NotReady");self:SetHighlightTexture("Interface\\Minimap\\UI-Minimap-Ping-Expand");</OnLoad>
