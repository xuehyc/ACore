<!--LuckDraw-->
<Frame name="LuckDrawFrame" parent="UIParent" inherits="GhostStaticFrameTemplate3.0">
	<Anchors>
		<Anchor point="CENTER">
			<Offset x="0" y="0" />
		</Anchor>
    </Anchors>
	<Size>
		<AbsDimension x="500" y="600"/>
	</Size>
	<Frames>
		<Button>
			<Size x="45" y="25"/>
				<Anchors>
					<Anchor point="TOP">
						<Offset x="0" y="-80" />
					</Anchor>
				</Anchors>
			<Layers>
				<Layer level="OVERLAY">	
					<FontString name = "LuckDrawTitle" setAllPoints="true" justifyV="MIDDLE" justifyH="CENTER" inherits="ErrorFont" text="">
